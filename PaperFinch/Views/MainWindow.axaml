<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:PaperFinch.ViewModels"
        xmlns:controls="using:PaperFinch.Controls"
        xmlns:avaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
        mc:Ignorable="d"
        x:Class="PaperFinch.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="PDF Generator with Live Preview"
        Width="1400"
        MinWidth="1000"
        Height="900"
        MinHeight="600"
        Icon="/Assets/avalonia-logo.ico"
        FontFamily="Segoe UI, Arial, sans-serif"
        FontSize="14">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Styles>
        <!-- Modern Tab Styling -->
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>

        <Style Selector="TabItem:selected">
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Add some breathing room to TabControl -->
        <Style Selector="TabControl">
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Styles>

    <Grid ColumnDefinitions="2*,4*,1*" RowDefinitions="*">
        <!-- LEFT COLUMN: settings + actions -->
        <Grid Grid.Column="0" Margin="15">
            <Grid RowDefinitions="Auto,*,Auto">
                <TextBlock Grid.Row="0"
                           Text="PaperFinch"
                           FontSize="24"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="5,10,5,15"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="15" Margin="40,0">
                        <TextBlock Text="Theme:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,0"/>
                        <ComboBox ItemsSource="{Binding Themes}"
                                  SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                  HorizontalAlignment="Stretch"
                                  CornerRadius="6"
                                  Padding="10,6">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <Button Content="Save Theme" Command="{Binding SaveThemeCommand}" MinWidth="100" Padding="12,6" CornerRadius="6"/>
                            <Button Content="Save As..." Command="{Binding SaveAsNewThemeCommand}" MinWidth="80" Padding="12,6" CornerRadius="6"/>
                            <Button Content="Delete" Command="{Binding DeleteThemeCommand}" MinWidth="80" Padding="12,6" CornerRadius="6"/>
                        </StackPanel>

                        <Separator Margin="0,10"/>

                        <TabControl Padding="0,8,0,0">
                            <TabItem Header="Page">
                                <StackPanel Margin="0,10" Spacing="10">
                                    <TextBlock Text="Trim Size:"/>
                                    <ComboBox ItemsSource="{Binding TrimSizes}"
                                              SelectedItem="{Binding SelectedTrimSize, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch">
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}"/>
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>

                                    <TextBlock Text="Inside Margin (in):" Margin="0,8,0,0"/>
                                    <NumericUpDown Value="{Binding Theme.InsideMargin, Mode=TwoWay}" Minimum="0" Maximum="3" Increment="0.125" FormatString="0.000" HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Outside Margin (in):"/>
                                    <NumericUpDown Value="{Binding Theme.OutsideMargin, Mode=TwoWay}" Minimum="0" Maximum="3" Increment="0.125" FormatString="0.000" HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Top Margin (in):"/>
                                    <NumericUpDown Value="{Binding Theme.TopMargin, Mode=TwoWay}" Minimum="0" Maximum="3" Increment="0.125" FormatString="0.000" HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Bottom Margin (in):"/>
                                    <NumericUpDown Value="{Binding Theme.BottomMargin, Mode=TwoWay}" Minimum="0" Maximum="3" Increment="0.125" FormatString="0.000" HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Body Text">
                                <StackPanel Margin="0,10" Spacing="10">
                                    <TextBlock Text="Font:"/>
                                    <ComboBox ItemsSource="{Binding AvailableFonts}"
                                              SelectedItem="{Binding Theme.BodyFont, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Font Size (pt):"/>
                                    <NumericUpDown Value="{Binding Theme.BodyFontSize, Mode=TwoWay}" Minimum="6" Maximum="72" Increment="1" FormatString="0" HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Line Spacing:"/>
                                    <NumericUpDown Value="{Binding Theme.LineSpacing, Mode=TwoWay}" Minimum="1.0" Maximum="2.0" Increment="0.1" FormatString="0.0" HorizontalAlignment="Stretch"/>

                                    <TextBlock Text="Paragraph Indent (in):"/>
                                    <NumericUpDown Value="{Binding Theme.ParagraphIndent, Mode=TwoWay}" Minimum="0" Maximum="1" Increment="0.05" FormatString="0.00" HorizontalAlignment="Stretch"/>

                                    <CheckBox Content="Double-space between paragraphs"
                                              IsChecked="{Binding Theme.DoubleSpaceParagraphs, Mode=TwoWay}"
                                              Margin="0,5,0,0"/>

                                    <CheckBox Content="Drop caps"
                                              IsChecked="{Binding Theme.DropCaps, Mode=TwoWay}"
                                              Margin="0,5,0,0"/>

                                    <CheckBox Content="Lead with small caps"
                                              IsChecked="{Binding Theme.LeadWithSmallCaps, Mode=TwoWay}"
                                              Margin="0,5,0,0"/>

                                    <TextBlock Text="Drop Cap Font:" Margin="0,8,0,0"/>
                                    <ComboBox ItemsSource="{Binding AvailableFonts}"
                                              SelectedItem="{Binding Theme.DropCapFont, Mode=TwoWay}"
                                              HorizontalAlignment="Stretch"/>
                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Titles">
                                <StackPanel Margin="0,10" Spacing="12">
                                    <TextBlock Text="Chapter Heading Position" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Top Offset (in):"/>
                                        <NumericUpDown Value="{Binding Theme.ChapterHeadingTopOffset, Mode=TwoWay}" Minimum="0" Maximum="5" Increment="0.125" FormatString="0.000" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="Distance from top of page to chapter heading" FontSize="10" Foreground="Gray"/>
                                    </StackPanel>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Chapter Title" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Font:"/>
                                        <ComboBox ItemsSource="{Binding AvailableFonts}"
                                                  SelectedItem="{Binding Theme.ChapterTitleFont, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch"/>

                                        <TextBlock Text="Font Size (pt):"/>
                                        <NumericUpDown Value="{Binding Theme.ChapterTitleFontSize, Mode=TwoWay}" Minimum="6" Maximum="72" Increment="1" FormatString="0" HorizontalAlignment="Stretch"/>

                                        <TextBlock Text="Bottom Spacing (in):"/>
                                        <NumericUpDown Value="{Binding Theme.ChapterTitleBottomSpacing, Mode=TwoWay}" Minimum="0" Maximum="2" Increment="0.05" FormatString="0.00" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="Space between title and subtitle" FontSize="10" Foreground="Gray"/>

                                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <CheckBox Content="Bold" IsChecked="{Binding Theme.ChapterTitleBold, Mode=TwoWay}"/>
                                            <CheckBox Content="Italic" IsChecked="{Binding Theme.ChapterTitleItalic, Mode=TwoWay}"/>
                                            <TextBlock Text="Alignment:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <ComboBox ItemsSource="{Binding TextAlignments}" SelectedItem="{Binding Theme.ChapterTitleAlignment, Mode=TwoWay}" HorizontalAlignment="Left" MinWidth="100"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Subtitle" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Font:"/>
                                        <ComboBox ItemsSource="{Binding AvailableFonts}"
                                                  SelectedItem="{Binding Theme.ChapterSubtitleFont, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch"/>

                                        <TextBlock Text="Font Size (pt):"/>
                                        <NumericUpDown Value="{Binding Theme.ChapterSubtitleFontSize, Mode=TwoWay}" Minimum="6" Maximum="72" Increment="1" FormatString="0" HorizontalAlignment="Stretch"/>

                                        <TextBlock Text="Bottom Spacing (in):"/>
                                        <NumericUpDown Value="{Binding Theme.ChapterSubtitleBottomSpacing, Mode=TwoWay}" Minimum="0" Maximum="2" Increment="0.05" FormatString="0.00" HorizontalAlignment="Stretch"/>
                                        <TextBlock Text="Space between subtitle and body text" FontSize="10" Foreground="Gray"/>

                                        <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                                            <CheckBox Content="Bold" IsChecked="{Binding Theme.ChapterSubtitleBold, Mode=TwoWay}"/>
                                            <CheckBox Content="Italic" IsChecked="{Binding Theme.ChapterSubtitleItalic, Mode=TwoWay}"/>
                                            <TextBlock Text="Alignment:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                            <ComboBox ItemsSource="{Binding TextAlignments}" SelectedItem="{Binding Theme.ChapterSubtitleAlignment, Mode=TwoWay}" HorizontalAlignment="Left" MinWidth="100"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Headers">
                                <StackPanel Margin="0,10" Spacing="12">
                                    <TextBlock Text="Page Numbers" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Page Number Position:"/>
                                        <ComboBox ItemsSource="{Binding PageNumberPositions}"
                                                  SelectedItem="{Binding Theme.SelectedPageNumberPosition, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding DisplayName}"/>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Running Headers (Page Top)" FontWeight="Bold" FontSize="14"/>
                                    <TextBlock Text="Configure what appears in the center of the page header" FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Left-Hand Pages" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Header Content:"/>
                                        <ComboBox ItemsSource="{Binding HeaderContentTypes}"
                                                  SelectedItem="{Binding Theme.LeftPageHeaderContent, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch"/>

                                        <CheckBox Content="Capitalize header text"
                                                  IsChecked="{Binding Theme.LeftPageHeaderCapitalize, Mode=TwoWay}"/>
                                    </StackPanel>

                                    <Separator Margin="0,10"/>

                                    <TextBlock Text="Right-Hand Pages" FontWeight="Bold" FontSize="14"/>
                                    <StackPanel Spacing="8">
                                        <TextBlock Text="Header Content:"/>
                                        <ComboBox ItemsSource="{Binding HeaderContentTypes}"
                                                  SelectedItem="{Binding Theme.RightPageHeaderContent, Mode=TwoWay}"
                                                  HorizontalAlignment="Stretch"/>

                                        <CheckBox Content="Capitalize header text"
                                                  IsChecked="{Binding Theme.RightPageHeaderCapitalize, Mode=TwoWay}"/>
                                    </StackPanel>
                                </StackPanel>
                            </TabItem>

                            <TabItem Header="Misc">
                                <StackPanel Margin="0,10" Spacing="10">
                                    <TextBlock Text="Table of Contents" FontWeight="Bold" FontSize="14"/>

                                    <CheckBox Content="Show subtitles in Table of Contents"
                                              IsChecked="{Binding Theme.ShowSubtitlesInTOC, Mode=TwoWay}"
                                              Margin="0,5,0,0"/>
                                </StackPanel>
                            </TabItem>
                        </TabControl>

                        <Separator Margin="0,10"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- Bottom button + project control area -->
                <Border Grid.Row="2"
                        BorderThickness="0,2,0,0"
                        BorderBrush="{DynamicResource SystemControlForegroundBaseMediumLowBrush}"
                        Padding="0,15,0,0">
                    <StackPanel Orientation="Vertical" Spacing="10" Margin="40,0,40,10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Generate PDF Preview"
                                Command="{Binding GeneratePdfCommand}"
                                HorizontalAlignment="Stretch"/>
                        <Button Content="Export PDF..."
                                Command="{Binding ExportPdfCommand}"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <TextBlock Text="Project:" FontWeight="SemiBold" FontSize="14" Margin="0,5,0,0"/>
                    <ComboBox ItemsSource="{Binding Projects}"
                              SelectedItem="{Binding SelectedProject, Mode=TwoWay}"
                              HorizontalAlignment="Stretch"
                              CornerRadius="6"
                              Padding="10,6">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Button Content="Save Project" Command="{Binding SaveProjectCommand}" MinWidth="100" Padding="12,6" CornerRadius="6"/>
                        <Button Content="Save As..." Command="{Binding SaveAsNewProjectCommand}" MinWidth="80" Padding="12,6" CornerRadius="6"/>
                        <Button Content="Delete" Command="{Binding DeleteProjectCommand}" MinWidth="80" Padding="12,6" CornerRadius="6"/>
                    </StackPanel>

                    <TextBlock Margin="0,10,0,0"
                               Text="{Binding PageInfo}"
                               TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- MIDDLE COLUMN: composition + preview -->
        <Grid Grid.Column="1" Margin="10">
            <TabControl SelectionChanged="OnTabSelectionChanged">
                <!-- COMPOSITION TAB -->
                <TabItem Header="Composition">
                    <ScrollViewer>
                        <StackPanel Spacing="15" Margin="80,15" MaxWidth="1200" HorizontalAlignment="Center">
                            <TextBlock Text="Chapter Content" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Chapter Title:"/>
                            <TextBox Text="{Binding Project.SelectedChapter.Title, Mode=TwoWay, FallbackValue=''}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Chapter Subtitle:"/>
                            <TextBox Text="{Binding Project.SelectedChapter.Subtitle, Mode=TwoWay, FallbackValue=''}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Content (Markdown):"
                                       IsVisible="{Binding !Project.SelectedChapter.IsTableOfContents}"/>
                            <TextBlock Text="**bold** *italic* ++underline++ \ skip formatting" FontSize="11" Foreground="Gray" Margin="0,2,0,5"
                                       IsVisible="{Binding !Project.SelectedChapter.IsTableOfContents}"/>

                            <Border BorderBrush="Gray" BorderThickness="1" Height="500"
                                    HorizontalAlignment="Stretch"
                                    CornerRadius="8"
                                    BoxShadow="0 2 10 0 #15000000"
                                    Padding="2"
                                    IsVisible="{Binding !Project.SelectedChapter.IsTableOfContents}">
                                <avaloniaEdit:TextEditor x:Name="ContentEditor"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Stretch"
                                                         ShowLineNumbers="False"
                                                         WordWrap="True"
                                                         FontFamily="Times New Roman"
                                                         FontSize="16"
                                                         />
                            </Border>

                            <TextBlock Text="This is a Table of Contents chapter. PaperFinch will automatically generate the content for you based on your other chapters."
                                       FontStyle="Italic"
                                       Foreground="Gray"
                                       TextWrapping="Wrap"
                                       IsVisible="{Binding Project.SelectedChapter.IsTableOfContents}"/>

                            <TextBlock Text="Note: PaperFinch should not be used to replace a normal word processor. Please use this area to make final corrections only, and always back up your work!"
                                       Foreground="DarkRed"
                                       FontStyle="Italic"
                                       TextWrapping="Wrap"
                                       Margin="0,10,0,0"/>

                             <CheckBox Content="Front matter (eg. Copyright page). These pages must be at the front of your document and are excluded from page numbering."
                                      IsChecked="{Binding Project.SelectedChapter.ExcludeFromPageCount, Mode=TwoWay, FallbackValue=False}"
                                      Margin="0,5,0,0"/>

                            <CheckBox Content="Table of Contents. PaperFinch will automatically fill this in for you. Should be part of your Front Matter."
                                      IsChecked="{Binding Project.SelectedChapter.IsTableOfContents, Mode=TwoWay, FallbackValue=False}"
                                      Margin="0,5,0,0"/>

                            <CheckBox Content="Don't indent paragraphs in this chapter."
                                      IsChecked="{Binding Project.SelectedChapter.NoIndent, Mode=TwoWay, FallbackValue=False}"
                                      Margin="0,5,0,0"/>

                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- METADATA TAB -->
                <TabItem Header="Metadata">
                    <ScrollViewer>
                        <StackPanel Spacing="15" Margin="15">
                            <TextBlock Text="Book Metadata" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Text="Title:"/>
                            <TextBox Text="{Binding Project.BookTitle, Mode=TwoWay}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Subtitle:"/>
                            <TextBox Text="{Binding Project.BookSubtitle, Mode=TwoWay}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Author:"/>
                            <TextBox Text="{Binding Project.BookAuthor, Mode=TwoWay}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Publisher Name:"/>
                            <TextBox Text="{Binding Project.BookPublisherName, Mode=TwoWay}" HorizontalAlignment="Stretch"/>

                            <TextBlock Text="Publisher Link:"/>
                            <TextBox Text="{Binding Project.BookPublisherLink, Mode=TwoWay}" HorizontalAlignment="Stretch"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- PREVIEW TAB -->
                <TabItem Header="Preview">
                    <Grid RowDefinitions="*,Auto">
                        <!-- PDF Preview with loading overlay -->
                        <Grid Grid.Row="0" Margin="15">
                            <Border Background="LightGray"
                                    Padding="15"
                                    CornerRadius="10"
                                    BoxShadow="0 4 12 0 #20000000">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <controls:PdfPreviewControl x:Name="PdfPreview" MaxWidth="700" MaxHeight="900"/>
                                </ScrollViewer>
                            </Border>

                            <!-- Loading overlay -->
                            <Border Background="#CC000000"
                                    IsVisible="{Binding IsGenerating}">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
                                    <TextBlock Text="Generating PDF..."
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="Please wait..."
                                               FontSize="14"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Navigation buttons and zoom slider at bottom -->
                        <Grid Grid.Row="1" Margin="0,10,0,0" ColumnDefinitions="*,Auto,*">
                            <!-- Left spacer -->
                            <Panel Grid.Column="0"/>

                            <!-- Center: Navigation buttons -->
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                                <Button Content="&lt;&lt; First" Command="{Binding GoToFirstPageCommand}" MinWidth="70" Padding="10,6" CornerRadius="6"/>
                                <Button Content="&lt; Previous" Command="{Binding GoToPreviousPageCommand}" MinWidth="80" Padding="10,6" CornerRadius="6"/>
                                <Button Content="Next &gt;" Command="{Binding GoToNextPageCommand}" MinWidth="80" Padding="10,6" CornerRadius="6"/>
                                <Button Content="Last &gt;&gt;" Command="{Binding GoToLastPageCommand}" MinWidth="70" Padding="10,6" CornerRadius="6"/>
                            </StackPanel>

                            <!-- Right: Zoom slider -->
                            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="20,0,0,0">
                                <TextBlock Text="Zoom:" VerticalAlignment="Center"/>
                                <Slider Value="{Binding ZoomLevel, Mode=TwoWay}"
                                        Minimum="0.35"
                                        Maximum="1.05"
                                        MinWidth="120"
                                        VerticalAlignment="Center"
                                        TickFrequency="0.05"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock VerticalAlignment="Center" MinWidth="50">
                                    <TextBlock.Text>
                                        <Binding Path="ZoomLevel">
                                            <Binding.Converter>
                                                <vm:ZoomToPercentageConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- RIGHT COLUMN: chapter management -->
        <Grid Grid.Column="2" Margin="10">
            <Grid RowDefinitions="Auto,*,Auto">
                <TextBlock Grid.Row="0"
                           Text="Chapters"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <Border Grid.Row="1" 
                        BorderBrush="Gray" 
                        BorderThickness="1" 
                        CornerRadius="4">
                    <ListBox ItemsSource="{Binding Project.Chapters}"
                             SelectedItem="{Binding Project.SelectedChapter, Mode=TwoWay}"
                             SelectionMode="Single"
                             HorizontalAlignment="Stretch">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="2">
                                    <TextBlock Text="{Binding Title}"
                                               FontWeight="Bold"
                                               FontSize="12"
                                               TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Subtitle}"
                                               FontSize="10"
                                               Foreground="Gray"
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <StackPanel Grid.Row="2" Spacing="8" Margin="0,10,0,0">
                    <Button Content="Add Chapter" 
                            Command="{Binding AddChapterCommand}"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Remove Chapter" 
                            Command="{Binding RemoveChapterCommand}"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Move Up" 
                            Command="{Binding MoveChapterUpCommand}"
                            HorizontalAlignment="Stretch"/>
                    <Button Content="Move Down" 
                            Command="{Binding MoveChapterDownCommand}"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>